<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tk_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center"
        android:layout_weight="2"
        android:background="@color/darkGreen"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/btn_profile_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back_btn"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="left"

            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_landingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:gravity="center"
                android:fontFamily="@font/roboto_blk"
                android:textStyle="bold"
                android:text="Profile" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="7"
        android:padding="30dp"

        >

        <ImageView
            android:id="@+id/iv_profile_badge"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_background"
            />

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="40sp"
            android:fontFamily="@font/roboto_blk"
            android:textColor="@color/darkGreen"
            android:layout_height="wrap_content"
            android:text="Sample Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/darkGreen"
                android:layout_weight="1"
                android:text="Name:"/>

            <TextView
                android:id="@+id/tv_profile_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/darkGreen"
                android:text="Sample Name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/darkGreen"
                android:layout_weight="1"
                android:text="Age:"/>

            <TextView
                android:id="@+id/tv_profile_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/darkGreen"
                android:text="10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/darkGreen"
                android:layout_weight="1"
                android:text="Birthday:"/>

            <TextView
                android:id="@+id/tv_profile_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/darkGreen"
                android:text="March 06, 1999"/>

        </LinearLayout>




    </LinearLayout>


</LinearLayout>