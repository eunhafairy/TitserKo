<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tk_profile"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/profile_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"
        android:visibility="visible"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/darkGreen"
            android:padding="10dp"
            android:orientation="horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"/>


            <ImageView
                android:id="@+id/btn_profile_back"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/navigation_vector_white"
                />
            <TextView
                android:id="@+id/tv_landingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Profile" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="7"
        android:padding="30dp"

        >

        <ImageView
            android:id="@+id/iv_profile_badge"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_background"
            />

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="40sp"
            android:fontFamily="@font/roboto_blk"
            android:textColor="@color/darkGreen"
            android:layout_height="wrap_content"
            android:text="Sample Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/darkGreen"
                android:layout_weight="1"
                android:text="Name:"/>

            <TextView
                android:id="@+id/tv_profile_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/darkGreen"
                android:text="Sample Name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/darkGreen"
                android:layout_weight="1"
                android:text="Age:"/>

            <TextView
                android:id="@+id/tv_profile_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/darkGreen"
                android:text="10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/darkGreen"
                android:layout_weight="1"
                android:text="Birthday:"/>

            <TextView
                android:id="@+id/tv_profile_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/darkGreen"
                android:text="March 06, 1999"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/roboto_blk"
            android:textColor="@color/darkGreen"
            android:text="Badges"/>




<!--
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_profile_badges"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_row"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"/>
-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_row"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:orientation="horizontal">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <org.apmem.tools.layouts.FlowLayout
                        android:id="@+id/fl_profile"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >




                    </org.apmem.tools.layouts.FlowLayout>

                </ScrollView>


            </LinearLayout>





    </LinearLayout>

     </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>