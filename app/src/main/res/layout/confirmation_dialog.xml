<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="350dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:outlineAmbientShadowColor="@null"
        app:cardElevation="0dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:background="@drawable/vector_dialog"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/confirm_tv_dialog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="150dp"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/brownText"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:shadowColor="@color/customBrown"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="1.6"
                    android:text="Confirm"
                    />

                <TextView
                    android:id="@+id/confirm_tv_dialog_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="100dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/customBrown"
                    android:text="Sample Description"
                    android:textSize="20sp"
                    android:layout_marginBottom="20dp"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="30dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/confirm_btn_dialog_okay"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:background="@drawable/vector_wooden_title1"
                    android:backgroundTint="@null"
                    android:textColor="@color/red"
                    android:fontFamily="@font/roboto_blk"
                    android:layout_gravity="center"
                    android:text="Confirm"
                    android:textAllCaps="false" />
                <Button
                    android:id="@+id/confirm_btn_dialog_cancel"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:background="@drawable/vector_wooden_title2"
                    android:backgroundTint="@null"
                    android:layout_gravity="center"
                    android:text="Cancel"
                    android:textAllCaps="false" />


            </androidx.appcompat.widget.LinearLayoutCompat>




        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>