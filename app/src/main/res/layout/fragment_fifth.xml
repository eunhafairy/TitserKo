<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vector_tutorial_bg"
    tools:context=".FifthFragment">


    <TextView
        android:id="@+id/fifthFrag_tv_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:autoSizeMaxTextSize="70sp"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/chalk_board"
        android:gravity="center"
        android:textColor="@color/customBrown"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/fifthFrag_guideline1"
        app:layout_constraintDimensionRatio="5:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Badges"
       />


    <ImageView
        android:id="@+id/fifthFrag_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fifth_frag_home"
        app:layout_constraintBottom_toTopOf="@+id/fifthFrag_guideline2"
        app:layout_constraintDimensionRatio="1:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fifthFrag_guideline1" />


    <TextView
        android:id="@+id/fifthFrag_tv_instruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Maaari kang makakuha ng mga Badges kung makakamtam mo ang mga hinihinging kondisyon. Makikita mo ang mga Badges na naipon mo sa Profile tab. Ipunin ito at ipakita sa iba!"
        android:textColor="@color/customBrown"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/fifthFrag_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fifthFrag_guideline2" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="5:1"
        app:layout_constraintEnd_toStartOf="@+id/fifthFrag_tv_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fifthFrag_guideline"
        android:src="@drawable/fifth_frag_nav"
     />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fifthFrag_tv_next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/vector_wooden_title1"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/roboto_blk"
        android:paddingLeft="3dp"
        android:paddingBottom="3dp"
        android:shadowColor="@color/darkGray"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/brownText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/fifthFrag_guideline"  />

    <androidx.constraintlayout.widget.Guideline
    android:id="@+id/fifthFrag_guideline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent=".90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fifthFrag_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".60" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fifthFrag_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".15" />

</androidx.constraintlayout.widget.ConstraintLayout>