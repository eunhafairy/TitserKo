<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="500dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        cardcornerRadius="@null"
        android:outlineAmbientShadowColor="@null"
        app:cardElevation="0dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/vector_dialog"
            android:padding="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:maxWidth="180dp"
                android:layout_gravity="center"
                android:textColor="@color/customBrown"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_blk"
                android:textSize="25sp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="18dp"
                android:text="Tips"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:layout_weight="8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tip_iv_animal_pic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_launcher_background" />

                    <TextView
                        android:id="@+id/tip_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:maxWidth="250dp"
                        android:text="SampleTitle"
                        android:textColor="@color/customBrown"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tip_tv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:maxWidth="250dp"
                        android:text="Sample description sample description  sample description  sample description  sample description sample description  sample description sample description  sample description sample description  sample description"
                        android:textColor="@color/customBrown"
                        android:textSize="15sp" />


                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="bottom"
                android:paddingBottom="25dp"
                android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tip_btn_cancel"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:textColor="@color/customBrown"
                    android:background="@drawable/vector_wooden_title2"
                    android:textAllCaps="false"
                    android:text="Okay"/>

            </LinearLayout>




        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>