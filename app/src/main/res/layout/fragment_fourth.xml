<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tutorial_gradient"
    android:padding="15dp"
    tools:context=".FourthFragment">

    <ImageView
        android:id="@+id/fourthFrag_iv"
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/score_star_3"
        />

    <TextView
        android:id="@+id/fourthFrag_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:fontFamily="@font/roboto_blk"
        android:textColor="@color/lightGray2"
        android:text="Stars"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fourthFrag_tv_instruction"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/lightGray2"
        android:textSize="15sp"
        android:text="Kumuha ng mga stars sa bawat lessons. Isang star para pagbasa ng buong aralin. Isang star kung nakapasa ka sa pagsusulit. At isang star kung makakuha ng perpektong marka."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|start"
            android:src="@drawable/fourth_frag_nav"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"
            android:gravity="bottom|end"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fourthFrag_tv_next"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|end"
                android:textSize="15sp"
                android:background="@drawable/rounded_row"
                android:textColor="@color/darkGreen"
                android:fontFamily="@font/roboto_blk"
                android:clickable="true"
                android:focusable="true"
                android:text="Next"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>