<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_height="450dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@android:color/transparent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/vector_dialog"
            android:padding="25dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:maxWidth="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/customBrown"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:text="Unlocked!"
                />


            <ImageView
                android:id="@+id/iv_achieve_badge_unlocked"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_background"
                />

            <TextView
                android:id="@+id/tv_title_achieve_unlocked"
                android:layout_width="wrap_content"
                android:maxWidth="250dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/customBrown"
                android:layout_marginBottom="5dp"
                android:text="SampleTitle"
                />

            <TextView
                android:id="@+id/tv_desc_achieve_unlocked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:text="SampleTitleSampleTitleSampleTitle"
                />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_confirm_achieve_unlocked"
                    android:layout_width="250dp"
                    android:layout_height="90dp"
                    android:background="@drawable/vector_wooden_title2"
                    android:textColor="@color/customBrown"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_blk"
                    android:text="Confirm"
                    android:layout_marginBottom="10dp"
                    android:textAllCaps="false" />
            </LinearLayout>




        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>

