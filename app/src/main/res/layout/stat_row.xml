<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:layout_marginTop="20dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/stat_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:fontFamily="@font/roboto_blk"
        android:textColor="@color/darkGreen"
        android:layout_gravity="center"
        android:text="Overall Progress"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/darkGreen"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/darkGreen"
            android:layout_weight="1"
            android:text="Study Progress"/>

        <TextView
            android:id="@+id/stat_row_study_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/darkGreen"
            android:text="10%"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/darkGreen"
            android:layout_weight="1"
            android:text="Quiz Highscore"/>

        <TextView
            android:id="@+id/stat_row_highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/darkGreen"
            android:text="3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/darkGreen"
            android:layout_weight="1"
            android:text="Lowest Score"/>

        <TextView
            android:id="@+id/stat_row_lowscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/darkGreen"
            android:text="5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/darkGreen"
            android:layout_weight="1"
            android:text="Quiz taken"/>

        <TextView
            android:id="@+id/stat_row_quiz_taken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/darkGreen"
            android:text="5"/>

    </LinearLayout>


</LinearLayout>