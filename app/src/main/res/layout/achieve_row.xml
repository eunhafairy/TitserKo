<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_achieverow"
            android:background="@drawable/rounded_row_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left"
                android:padding="2dp"
                android:layout_weight="5">
                <ImageView
                    android:id="@+id/iv_achieveRow"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    />
                <TextView
                    android:id="@+id/tv_achieveRow"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample Lesson" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_achieve"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_row"
                    android:text="Equipped"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:tag="equipped"
                    android:backgroundTint="@color/darkGreen"/>


            </LinearLayout>





        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>