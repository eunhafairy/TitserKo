<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/vector_dashboard_bg"
    tools:context=".QuizProper">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center"
        android:layout_weight="2"
        >


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/vector_wooden_title1"
            android:fontFamily="@font/finger_paint"
            android:gravity="center"
            android:shadowColor="@color/customBrown"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:text="Quiz"
            android:textColor="@color/brownText"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:layout_weight="7"
        android:paddingRight="10dp">

        <LinearLayout
            android:id="@+id/ll_qp_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/quizProgress"
                android:layout_marginTop="20dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progress="50"

                />
            <TextView
                android:id="@+id/tv_qp_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:fontFamily="@font/finger_paint"
                android:text="Piliin ang katumbas na tunog"
                android:textAlignment="center"
                android:textColor="@color/darkGreen"
                android:textSize="20sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/iv_qp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/vector_audio_btn"
                android:visibility="visible"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:id="@+id/ll_btnParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">


                <Button
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:background="@drawable/vector_lesson_btn" />.

                <Button
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:background="@drawable/vector_lesson_btn" />

                <Button
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:background="@drawable/vector_lesson_btn" />

                <Button
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:background="@drawable/vector_lesson_btn" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_lp_confirm"
        android:clickable="false"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/vector_wooden_title1"
        android:text="Confirm"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:padding="2dp"
        android:layout_marginBottom="5dp"
        />



</LinearLayout>